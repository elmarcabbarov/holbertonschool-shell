#!/usr/bin/env bash
# Init-like script to manage the manage_my_process script

PID_FILE="/var/run/my_process.pid"
SCRIPT_PATH="./manage_my_process"  # Adjust path if needed

case "$1" in
    start)
        # Start the process
        nohup "$SCRIPT_PATH" > /dev/null 2>&1 &
        echo $! > "$PID_FILE"
        echo "manage_my_process started"
        ;;
    stop)
        # Stop the process
        if [ -f "$PID_FILE" ]; then
            kill "$(cat "$PID_FILE")" 2>/dev/null
            rm -f "$PID_FILE"
            echo "manage_my_process stopped"
        else
            echo "manage_my_process not running (no PID file)"
        fi
        ;;
    restart)
        # Restart the process
        if [ -f "$PID_FILE" ]; then
            kill "$(cat "$PID_FILE")" 2>/dev/null
            rm -f "$PID_FILE"
        fi
        nohup "$SCRIPT_PATH" > /dev/null 2>&1 &
        echo $! > "$PID_FILE"
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac
